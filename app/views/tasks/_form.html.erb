
<div class="clearfix">
  <%= f.association :project %>
</div>

<div class="clearfix">
   <%= f.label :name, t("activerecord.attributes.task.name", :default => "Name"), :class => :label %>
  <div class="input">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
</div>

<div class="clearfix">
  <%= f.input :points, :collection => Task::POINTS %>
</div>
<div class="form-actions">
  <button class="btn primary" type="submit">Save</button> or
	<%= link_to "Cancel", tasks_path %>
</div>
