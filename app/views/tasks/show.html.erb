
<label class="label"><%= t("activerecord.attributes.task.project_id", :default => t("activerecord.labels.project_id", :default => "Project")) %>:</label>
<p><%= @task.project_id %></p>

<label class="label"><%= t("activerecord.attributes.task.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</label>
<p><%= @task.name %></p>

<label class="label"><%= t("activerecord.attributes.task.points", :default => t("activerecord.labels.points", :default => "Points")) %>:</label>
<p><%= @task.points %></p>

<div class="form-actions">
<%= link_to "Back", tasks_path, :class => 'btn'  %>
<%= link_to "Edit", edit_task_path(@task), :class => 'btn' %>
<%= link_to "Delete", task_path(@task), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>
